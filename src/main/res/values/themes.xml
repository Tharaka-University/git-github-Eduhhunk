<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MBora" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#00EE04</item>
        <item name="colorPrimaryVariant">#34BC2F</item>
        <item name="colorOnPrimary">@color/lavender</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">#358F21</item>
        <item name="colorSecondaryVariant">#6A8701</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/orange</item>
        <!-- Customize your theme here. -->
        <item name="color">#390743FA</item>

    </style>

    <style name="Theme.MBora.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MBora.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MBora.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>